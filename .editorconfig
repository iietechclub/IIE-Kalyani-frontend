# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript & JavaScript files
[*.{ts,tsx,js,jsx,mjs,cjs,mts,cts}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2
insert_final_newline = false

# Package manager files
[{package.json,package-lock.json,yarn.lock,pnpm-lock.yaml}]
indent_size = 2
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.{md,mdx}]
trim_trailing_whitespace = false
max_line_length = off

# CSS & related files
[*.{css,scss,sass,less}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# GraphQL files
[*.{graphql,gql}]
indent_size = 2

# Configuration files
[{biome.json,tsconfig*.json,.prettierrc,.eslintrc}]
indent_size = 2

# Next.js config
[next.config.{js,ts,mjs}]
indent_size = 2

# Environment files
[.env*]
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Git files
[.{gitignore,gitattributes}]
insert_final_newline = true
